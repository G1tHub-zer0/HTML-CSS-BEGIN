mixin tourItem
.tour
    .tour-top
        img.tour-image(src='./image/img1.png', alt='Bali')
        span.tour-price From $40
    .tour-content
        h3.tour-title Thailands Ayutthaya Temples Cruise from Bangkok
        .tour-rating
            .tour-review
                .tour-star
                    img(src='./image/star.png', alt='star')
                .tour-review-count
                    span 4.8 (12 reviews)
            .tour-duration Duration: 9 hours
        a.tour-button(href='http://facebook.com/', target='_blank', rel='noopener noreferrer') Tour price $61

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Tour
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Inter:wght@500;600&display=swap" rel="stylesheet")
        link(rel="stylesheet" href="./styles.css")
    body 
        .tour-list-container
            .tour-list
                .tour
                    .tour-top
                        img.tour-image(src='./image/img1.png', alt='Bali')
                        span.tour-price From $40
                    .tour-content
                        h3.tour-title Thailands Ayutthaya Temples Cruise from Bangkok
                        .tour-rating
                            .tour-review
                                .tour-star
                                    img(src='./image/star.png', alt='star')
                                .tour-review-count
                                    span 4.8 (12 reviews)
                            .tour-duration Duration: 9 hours
                        a.tour-button(href='http://facebook.com/', target='_blank', rel='noopener noreferrer') Tour price $61


